# Wikia .editorconfig
# Please keep these in alphabetical order.
# Download the plugin for your editor/IDE of choice from http://editorconfig.org/#download
root = true

[**.js]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space 
insert_final_newline = true
max_line_length = 120 # Vim
trim_trailing_whitespace = true

[**.html]
charset = utf-8
end_of_line = lf
indent_style = space 
indent_size = 2 
insert_final_newline = true
max_line_length = 120 # Vim
trim_trailing_whitespace = true

[**.scss]
charset = utf-8
end_of_line = lf
indent_style = space 
indent_size = 2 
insert_final_newline = true
max_line_length = 80 # Vim
trim_trailing_whitespace = true


